window.onload = function () {

  cleaningLocations();
}

var map;

function cleaningLocations() {

  // Find the map container
  var mapContainer = document.getElementById('cleaning-location');

  // Store the info about the Cleaning Locations in a JS object
  var markers = [

    [title:"Wellington Cleaning Location", -41.288784, 174.777223, icon: 'img/cleaning-location-marker.png'],
    [title:"Petone Cleaning Location", -41.225289, 174.871759, icon: 'img/cleaning-location-marker.png'],
    [title:"Whitby Cleaning Location", -41.116965, 174.893242, icon:'img/cleaning-location-marker.png']
  ]

  var mapOptions = {

    center:centerPoint,
    zoom:17,
    scrollwheel: false,
    mapTypeControl:false,
    streetViewControl:false
  }

  // Show the map
  map = new google.maps.Map(mapContainer, mapOptions);

  // Reference the marker
  // var iconBase = 'img/cleaning-location-marker.png';
  
  // Loop through the array of markers and place each of them on the map
  for( i=0; i < cleaningMarkers.length; i++ ) {
    // Place the markers to their locations
    var centerPoints = new google.maps.LatLng(cleaningMarkers.[i][0], cleaningMarkers.[i][1], cleaningMarkers.[i][2]);
    var cleaningMarker = new google.maps.Marker({

      position:centerPoints,
      map:map,
      icon:markers[i][0]

    });
  }

}






